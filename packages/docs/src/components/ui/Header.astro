---
const url = new URL(Astro.request.url);
const pathname = url.pathname; // 현재 페이지의 경로

let current: "docs" | "tutorial" | "none" = pathname.startsWith("/docs")
  ? "docs"
  : pathname.startsWith("/tutorial")
    ? "tutorial"
    : "none";
---

<header
  class="fixed left-0 top-0 z-[9999] flex w-full flex-col items-center justify-center border-b border-black bg-white px-[32px] blur-sm"
>
  <div
    class="relative mx-auto inline-flex w-full max-w-[1520px] items-center justify-center gap-8"
  >
    <a href="/" class="absolute left-20 top-1/2 -translate-y-1/2">
      <img class="h-10 w-10 rounded-full" src="/logo.jpeg" />
    </a>

    <div class="flex items-start justify-start gap-8">
      <a
        class={`${current === "docs" ? "active" : ""} text-gray-600 text-base leading-normal`}
        href="/docs">docs</a
      >
      <div class="flex items-center justify-center gap-1">
        <div class="text-base leading-normal text-black">
          <a
            class={`${current === "tutorial" ? "active" : ""} select-none`}
            title="comming soon"
            href="/tutorial">tutorial</a
          >
        </div>
        <div class="relative h-6 w-6"></div>
      </div>
    </div>
    <div class="absolute right-10 top-1/2 flex -translate-y-1/2 gap-4">
      <a href="https://github.com/meursyphus/flitter">
        <img class="h-10 w-10 rounded-full bg-white" src="/github-mark.png" />
      </a>
      <a href="https://discord.gg/kUZp4SaHzF">
        <img
          class="h-10 w-10 rounded-full object-scale-down"
          src="/discord.png"
        />
      </a>
    </div>
  </div>
</header>

<style>
  header {
    height: var(--header);
  }
  .active {
    font-weight: bold;
  }
</style>
