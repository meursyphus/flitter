---
const url = new URL(Astro.request.url);
const pathname = url.pathname; // 현재 페이지의 경로
---

<header
  class="w-full fixed top-0 left-0 px-[32px] z-[9999] bg-white border-b border-black flex-col justify-center items-center flex"
>
  <div
    class="mx-auto relative w-full max-w-[1520px] justify-center items-center gap-8 inline-flex"
  >
    <a href="/" class="absolute left-20 top-1/2 -translate-y-1/2">
      <img class="w-10 h-10 rounded-full" src="/logo.jpeg" />
    </a>

    <div class="justify-start items-start gap-8 flex">
      <a
        class={`${pathname.startsWith("/docs") ? "active" : ""} text-gray-600 text-base leading-normal`}
        href="/docs">docs</a
      >
      <div class="justify-center items-center gap-1 flex">
        <div class="text-black text-base leading-normal">
          <span class="opacity-50 select-none" title="comming soon"
            >tutorial</span
          >
        </div>
        <div class="w-6 h-6 relative"></div>
      </div>
    </div>
    <div class="absolute right-10 top-1/2 -translate-y-1/2 flex gap-4">
      <a href="https://github.com/meursyphus/flitter">
        <img class="w-10 h-10 rounded-full bg-white" src="/github-mark.png" />
      </a>
      <a href="https://discord.gg/kUZp4SaHzF">
        <img
          class="w-10 h-10 rounded-full object-scale-down"
          src="/discord.png"
        />
      </a>
    </div>
  </div>
</header>

<style>
  header {
    height: var(--header);
  }
  .active {
    font-weight: bold;
  }
</style>
