---
import "@egjs/react-flicking/dist/flicking.css";
import { Banner } from "./show-cases";
---

<section class="flex w-full flex-col">
  <h1 class="title mx-auto">Powered by Flitter</h1>
  <div class="mt-[128px] flex h-screen w-full justify-end">
    <div class="flex w-[90vw] max-w-[90vw] grow-0 items-center py-8">
      <Banner client:visible />
    </div>
  </div>

  <div id="easyrd-area" class="h-[300vh]">
    <div class="sticky top-0 flex h-screen w-full items-end justify-start">
      <img
        id="easyrd"
        class="h-[80%] translate-y-full"
        src="/home/easyrd.jpg"
        alt="showcase-diagram"
      />
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#easyrd", {
    scrollTrigger: {
      trigger: "#easyrd-area",
      start: "top top",
      end: "center bottom",
      scrub: 4,
    },
    y: 0,
    duration: 3,
  });
</script>

<style is:global>
  .panel {
    user-select: none;
  }
</style>
