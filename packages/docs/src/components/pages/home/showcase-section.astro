---
import "@egjs/react-flicking/dist/flicking.css";
import { Banner } from "./show-cases";
---

<section id="showcase-section" class="flex w-full flex-col">
  <h1 class="title mx-auto">Powered by Flitter</h1>
  <div class="mt-[24px] flex w-full items-center justify-end">
    <div
      class="flex w-full grow-0 items-center py-8 md:w-[90vw] md:max-w-[90vw]"
    >
      <Banner client:load />
    </div>
  </div>

  <div id="easyrd-area" class="mt-[200px] md:h-[300vh]">
    <div class="sticky top-0 flex w-full items-end justify-start md:h-screen">
      <img
        id="easyrd"
        class="w-full object-cover object-[75%_0px] md:h-[80%] md:w-auto md:translate-y-1/3 md:object-center"
        src="/home/easyrd.jpg"
        alt="https://easyrd.dev"
      />
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#easyrd", {
    scrollTrigger: {
      trigger: "#easyrd-area",
      start: "top top",
      end: "center bottom",
      scrub: 4,
    },
    y: 0,
    duration: 3,
  });
</script>

<style is:global>
  .panel {
    user-select: none;
    width: 800px;
    height: 640px;
  }
  @media (max-width: 768px) {
    .panel {
      width: 600px;
      height: 480px;
    }
  }
</style>
