---
import Header from "../components/ui/Header.astro";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = "Flitter - Data Visualization Framework" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpeg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.cdnfonts.com/css/helvetica-neue-55"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="layout">
      <slot />
    </div>
    <slot name="footer" />
  </body>
</html>
<style is:global>
  html,
  body {
    padding: 0;
    margin: 0;
  }
  body {
    font-family: Helvetica, sans-serif;
    background: #121212;
    color: white;
    --header: 96px;
    overflow-y: scroll;
    --px: 64px;
    --mw: 1920px;
  }
  .layout {
    display: flex;
    flex-direction: column;
  }
  @media (max-width: 768px) {
    body {
      --header: 116px;
      --px: 24px;
    }
  }

  /* Chrome, Edge, Safari에서 스크롤바 스타일링 */
  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }
  ::-webkit-scrollbar-thumb {
    background-color: #333333;
    border-radius: 20px;
    border: 3px solid #121212;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #555555;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
